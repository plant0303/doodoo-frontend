project-root/
├── public/                     # 정적 파일 (이미지, 폰트, favicon 등)
│   ├── images/
│   └── icons/
│
├── src/
│   ├── app/                    # Next.js 라우팅의 시작점
│   │   ├── layout.tsx          # 공통 레이아웃
│   │   ├── page.tsx            # 메인 페이지
│   │   └── globals.scss        # 전역 스타일
│   │
│   ├── components/             # 재사용 가능한 UI 컴포넌트
│   │   ├── common/             # 버튼, 모달 등 범용 컴포넌트
│   │   └── home/               # 메인 페이지 전용 컴포넌트
│   │       ├── HeroSection.tsx
│   │       ├── FeatureSection.tsx
│   │       └── Footer.tsx
│   │
│   ├── styles/                 # SCSS 파일 모음
│   │   ├── base/               # reset, variables, mixins 등
│   │   │   ├── _reset.scss
│   │   │   ├── _variables.scss
│   │   │   └── _mixins.scss
│   │   └── components/         # 각 컴포넌트별 SCSS (모듈 SCSS)
│   │       ├── HeroSection.module.scss
│   │       └── FeatureSection.module.scss
│   │
│   ├── hooks/                  # 커스텀 훅
│   │   └── useScroll.ts
│   │
│   ├── utils/                  # 공통 유틸 함수
│   │   └── formatDate.ts
│   │
│   ├── types/                  # 전역 타입 정의 (TypeScript용)
│   │   └── index.d.ts
│   │
│   └── lib/                    # API 통신, 외부 SDK, 서버 유틸
│       └── apiClient.ts
│
├── .eslintrc.json
├── tsconfig.json
├── package.json
└── next.config.mjs
